{% extends "base.html.twig" %}

{% block javascripts %}
    <script src="{{ JS_DIR }}/contact.js" type="module"></script>
{% endblock %}

{% block main %}
    <section class="size-small">
        <h1>Connexion</h1>
        <form id="contactForm" class="form" action="" method="POST">
            <div class="form-input">
                <label class="form-input__label" for="title">Titre :</label>
                <input class="form-input__input" type="title" name="title" id="title" required>
            </div>
            <div class="form-input">
                <label class="form-input__label" for="description">Description : </label>
                <textarea class="form-input__input"name="description" id="description" required></textarea>
            </div>
            <div class="form-input">
                <label class="form-input__label" for="email">Email :</label>
                <input class="form-input__input" type="email" name="email" id="email" pattern="^[A-Za-z\-\.]+@[A-Za-z\-]+\.[A-Za-z]{2,6}$" title="L'email doit commencer par une suite de caractères, puis un arobase, une autre suite de caractères et une extension (.com par exemple)" required>
            </div>
            <input class="form__submit-btn" type="submit" value="Envoyer">
            <div class="form-output">
                <p id="output"></p>
            </div>
        </form>
        <input type="hidden" name="sent_at" value="{{ "now"|date('Y-m-d H:i:s') }}">
        <input type="hidden" name="csrf_token" value="{{ session.csrf_token }}">
    </section>
{% endblock %}